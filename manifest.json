{
    "manifest_version": 2,
    "name": "Tchitos launcher",
    "description": "Copies the access token into clipboard",
    "version": "1.0.0",
    "icons": {
        "128": "icon_128.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "background.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}